        <!-- <button>I AM A BUTTON!</button> -->
        <div class="user1"></div>


            <input type="text" id="userText1">
            <button id="user1">send</button>

        <div class="user2"></div>


            <input type="text" id="userText2">
            <button id="user2">send</button>


    </body>
    </html>